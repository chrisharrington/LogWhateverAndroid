    package="com.logwhatever"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Log Whatever"
        android:theme="@style/LogWhateverTheme"
	android:name=".service.LogWhateverApplication">
        <activity android:name="com.logwhatever.activities.SignInActivity">
	    <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
	    </intent-filter>
	</activity>
	<activity android:name="com.logwhatever.activities.FragmentActivity" android:windowSoftInputMode="adjustPan" />
